<section class="d-flex align-items-center">
  <div class="container-sm mt-5 ">
    <div class="d-flex justify-content-center">
      <form action="/form/monthly_expenses" method="post">

        <!-- Form Persistence -->
        <input type="hidden" name="county" value={{form_response.county}}>
        <input type="hidden" name="married" value={{form_response.married}}>
        <input type="hidden" name="gross_income" value={{form_response.gross_income}}>
        <input type="hidden" name="other_income" value={{form_response.other_income}}>
        <input type="hidden" name="num_pregnant" value={{form_response.num_pregnant}}>
        <input type="hidden" name="num_children_under_1" value={{form_response.num_children_under_1}}>
        <input type="hidden" name="num_children_under_6" value={{form_response.num_children_under_6}}>
        <input type="hidden" name="num_children_under_18" value={{form_response.num_children_under_18}}>
        <input type="hidden" name="food" value={{form_response.food}}>
        <input type="hidden" name="healthcare" value={{form_response.healthcare}}>
        <input type="hidden" name="rent" value={{form_response.rent}}>
        <input type="hidden" name="childcare" value={{form_response.childcare}}>
        <input type="hidden" name="transportation" value={{form_response.transportation}}>

        <div class="card text" style="width: 30rem;">
          <div class="card-header">
          Other Dependents
          </div>
          <div class="card-body">


            <div class="form-group">
              <label for="other_dependents">How many other people live in this household that are not already counted?</label>
              <input type="number" class="form-control" name="other_dependents" id="other_dependents" placeholder="Other Dependents" value={{form_response.other_dependents}}>
              <small> These people must share food and expenses with the family members already counted. </small>
            </div>

            <div class="form-group mt-3">
              <label for="other_dependent_income">Enter the income for all the other people included in the question above.</label>
              <input type="number" class="form-control" name="other_dependent_income" id="other_dependent_income" placeholder="Other Dependents Gross Monthly Income" value={{form_response.other_dependent_income}}>
              <small> Earned and unearned income before taxes. </small>
            </div>


            <div class="d-flex justify-content-between">
              <button type="submit" formaction="/form/children_dependents" class="btn btn-primary mt-3">Back
              <button type="submit" class="btn btn-primary mt-3">Next
            </div>
          </div>

          <div class="card-footer text-muted text-center">
            Page 4/5
          </div>

      </form>
    </div>



  </div>
</section>
