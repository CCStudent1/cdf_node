<section class="d-flex align-items-center">
  <div class="container-sm mt-5 ">
    <div class="d-flex justify-content-center">
      <form action="/form/children_dependents" method="post">

        <!-- Form Persistence -->
        <input type="hidden" name="county" value={{form_response.county}}>
        <input type="hidden" name="married" value={{form_response.married}}>
        <input type="hidden" name="num_pregnant" value={{form_response.num_pregnant}}>
        <input type="hidden" name="num_children_under_1" value={{form_response.num_children_under_1}}>
        <input type="hidden" name="num_children_under_6" value={{form_response.num_children_under_6}}>
        <input type="hidden" name="num_children_under_18" value={{form_response.num_children_under_18}}>
        <input type="hidden" name="other_dependents" value={{form_response.other_dependents}}>
        <input type="hidden" name="other_dependent_income" value={{form_response.other_dependent_income}}>
        <input type="hidden" name="food" value={{form_response.food}}>
        <input type="hidden" name="healthcare" value={{form_response.healthcare}}>
        <input type="hidden" name="rent" value={{form_response.rent}}>
        <input type="hidden" name="childcare" value={{form_response.childcare}}>
        <input type="hidden" name="transportation" value={{form_response.transportation}}>

        <div class="card text" style="width: 30rem;">
          <div class="card-header">
          Income
          </div>
          <div class="card-body">

            <div class="form-group">
              <label for="gross_income">What is your Gross Monthly Income?</label>
              <input type="number" class="form-control" name="gross_income" id="gross_income" placeholder="Gross Monthly Income" value={{form_response.gross_income}}>
              <small> Money made from both spouses before taxes and deductions</small>
            </div>

            <div class="form-group mt-3">
              <label for="other_income">Other Monies</label>
              <input type="number" class="form-control" name="other_income" id="other_income" placeholder="Other Monthly Income" value={{form_response.other_income}}>
              <small> Will be more specific about this </small>
            </div>


            <div class="d-flex justify-content-between">
              <button type="submit" formaction="/form/init" class="btn btn-primary mt-3">Back
              <button type="submit" class="btn btn-primary mt-3">Next
            </div>
          </div>
          <div class="card-footer text-muted text-center">
            Page 2/5
          </div>

      </form>
    </div>



  </div>
</section>
